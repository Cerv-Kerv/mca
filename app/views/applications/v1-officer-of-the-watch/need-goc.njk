{% extends "layouts/main.html" %}

{% set pageName = "Application for certificate of competency" %}

{% block pageTitle %}{{ pageName }} â€“ GOV.UK Prototype{% endblock %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/application-oow/goc-details"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h1 class="govuk-fieldset__heading">Do you require a new UK GMDSS certificate?</h1>
            </legend>
            <div class="govuk-radios" data-module="govuk-radios">
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="goc-need-uk-yes"
                  name="gocNeedUk"
                  type="radio"
                  value="Yes"
                  {% if data.gocNeedUk == 'Yes' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="goc-need-uk-yes">
                  Yes
                </label>
              </div>
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="goc-need-uk-no"
                  name="gocNeedUk"
                  type="radio"
                  value="No"
                  {% if data.gocNeedUk == 'No' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="goc-need-uk-no">
                  No
                </label>
              </div>
            </div>
          </fieldset>
        </div>

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}

