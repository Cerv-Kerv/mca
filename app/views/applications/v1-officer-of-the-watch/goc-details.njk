{% extends "layouts/main.html" %}

{% set pageName = "Application for certificate of competency" %}

{% block pageTitle %}{{ pageName }} â€“ GOV.UK Prototype{% endblock %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/application-oow/coc-details"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body govuk-!-margin-bottom-4 govuk-!-font-size-16" style="color: #6b7280;">
        Question 2 of 5
      </p>

      <form method="post" novalidate>
        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h1 class="govuk-fieldset__heading">Do you hold a GMDSS General Operator's Certificate (GOC)?</h1>
            </legend>
            <div class="govuk-radios" data-module="govuk-radios">
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="goc-hold-yes"
                  name="gocHold"
                  type="radio"
                  value="Yes"
                  {% if data.gocHold == 'Yes' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="goc-hold-yes">
                  Yes
                </label>
              </div>
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="goc-hold-no"
                  name="gocHold"
                  type="radio"
                  value="No"
                  {% if not data.gocHold or data.gocHold == 'No' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="goc-hold-no">
                  No
                </label>
              </div>
            </div>
          </fieldset>
        </div>

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}

