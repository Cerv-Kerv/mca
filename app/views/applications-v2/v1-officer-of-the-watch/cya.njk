{% extends "layouts/main.html" %}

{% set pageName = "Application for certificate of competency" %}

{% block pageTitle %}{{ pageName }} â€“ GOV.UK Prototype{% endblock %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/application-oow/upload-documents"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Check your answers</h1>
      
      {% if gmdssStatusHtml %}
      {{ govukInsetText({
        html: gmdssStatusHtml
      }) }}
      {% endif %}

      <h2 class="govuk-heading-m govuk-!-margin-top-6">Application</h2>
      {{ govukSummaryList({
        rows: applicationRows
      }) }}

      <h2 class="govuk-heading-m govuk-!-margin-top-7">Certificates you already hold</h2>
      {{ govukSummaryList({
        rows: certificatesRows
      }) }}

      <h2 class="govuk-heading-m govuk-!-margin-top-7">Documents Uploaded</h2>
      
      {% if documentCategories %}
        {% for category in documentCategories %}
          <h3 class="govuk-heading-s govuk-!-margin-top-4">{{ category.title }}</h3>
          {{ govukSummaryList({
            rows: category.rows
          }) }}
        {% endfor %}
      {% endif %}

      <form method="post" novalidate>
        {{ govukButton({
          text: "Continue",
          classes: "govuk-!-margin-top-6"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
