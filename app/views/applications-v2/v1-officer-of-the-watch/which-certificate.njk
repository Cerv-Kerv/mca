{% extends "layouts/main.html" %}

{% set pageName = "Application for certificate of competency" %}

{% block pageTitle %}{{ pageName }} – GOV.UK Prototype{% endblock %}

{% block content %}
  {{ govukBackLink({
    text: "Back",
    href: "/application-oow/start"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h1 class="govuk-fieldset__heading">Which certificate are you applying for?</h1>
            </legend>
            <div class="govuk-radios" data-module="govuk-radios">
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="certificate-II1-UL"
                  name="certificate"
                  type="radio"
                  value="II1-UL"
                  {% if not data.certificate or data.certificate == 'II1-UL' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="certificate-II1-UL">
                  II/1 OOW, Unlimited Tonnage, Unlimited Area
                </label>
              </div>
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="certificate-II3-D"
                  name="certificate"
                  type="radio"
                  value="II3-D"
                  {% if data.certificate == 'II3-D' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="certificate-II3-D">
                  II/3 – OOW (Less than 500GT, Category "D" Waters)
                </label>
              </div>
              <div class="govuk-radios__item">
                <input
                  class="govuk-radios__input"
                  id="certificate-II3-NC"
                  name="certificate"
                  type="radio"
                  value="II3-NC"
                  {% if data.certificate == 'II3-NC' %}checked{% endif %}
                />
                <label class="govuk-label govuk-radios__label" for="certificate-II3-NC">
                  II/3 – OOW (Less than 500GT, Near Coastal Waters)
                </label>
              </div>
            </div>
          </fieldset>
        </div>

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}

